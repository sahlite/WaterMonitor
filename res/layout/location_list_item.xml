<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginBottom="2dp"
    android:layout_marginLeft="4dp"
    android:layout_marginRight="4dp"
    android:layout_marginTop="2dp"
    android:background="@color/light_grey"
    android:orientation="horizontal" >

    <ImageView
        android:id="@+id/image_location_list_item_image"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:contentDescription="@string/txt_image"
        android:maxHeight="@dimen/monitor_value_size"
        android:maxWidth="@dimen/monitor_value_size"
        android:src="@drawable/ic_launcher" />

    <TextView
        android:id="@+id/view_location_list_item_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/txt_unkown"
        android:textAppearance="?android:attr/textAppearanceMedium" />

</LinearLayout>
